<Window x:Class="Eduverse.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eduverse"
        mc:Ignorable="d"
        Title="StudentWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form for CRUD Operations -->
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="ID" Margin="0,0,0,5"/>
            <TextBox Name="StudentIdTextBox" Width="200" Margin="0,0,0,10" IsEnabled="False"/>

            <TextBlock Text="Name" Margin="0,0,0,5"/>
            <TextBox Name="StudentNameTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox Name="StudentEmailTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Mobile No" Margin="0,0,0,5"/>
            <TextBox Name="StudentMobileTextBox" Width="200" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Create" Width="75" Margin="0,0,10,0" Click="StdCreate_Click"/>
                <Button Content="Update" Width="75" Margin="0,0,10,0" Click="StdUpdate_Click"/>
                <Button Content="Delete" Width="75" Click="StdDelete_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid Name="StudentDataGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="True" 
                  SelectionChanged="StudentSelectionChanged"
                  SelectionMode="Single"
                  IsReadOnly="True"/>
    </Grid>
</Window>